# Crypto Alert System - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Admin chat ID for system notifications (your Telegram user ID)
# Get it from @userinfobot on Telegram
ADMIN_TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# SUPABASE DATABASE CONFIGURATION
# ============================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# ============================================
# ALERT SYSTEM CONFIGURATION
# ============================================
# Minimum confidence threshold for alerts (60-100)
DEFAULT_CONFIDENCE_THRESHOLD=70

# Alert cooldown period in seconds (default: 3600 = 1 hour)
ALERT_COOLDOWN_SECONDS=3600

# Monitoring interval in minutes (default: 15)
MONITORING_INTERVAL_MINUTES=15

# Maximum alerts per symbol per hour
MAX_ALERTS_PER_SYMBOL_PER_HOUR=1

# ============================================
# BINANCE API CONFIGURATION (Optional)
# ============================================
# Only needed if you want to use authenticated endpoints
# For public data, these are not required
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=alert_system.log

# ============================================
# SYSTEM HEALTH MONITORING
# ============================================
# Health check interval in minutes
HEALTH_CHECK_INTERVAL=5

# Maximum consecutive failures before admin alert
MAX_CONSECUTIVE_FAILURES=3

# ============================================
# RATE LIMITING
# ============================================
# Binance API rate limit (requests per minute)
BINANCE_RATE_LIMIT=1200

# Telegram API rate limit (messages per second)
TELEGRAM_RATE_LIMIT=30

# ============================================
# ADVANCED FEATURES (Optional)
# ============================================
# Enable chart generation (requires matplotlib)
ENABLE_CHART_GENERATION=false

# Enable email notifications (requires SMTP configuration)
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Enable Discord notifications (requires webhook URL)
ENABLE_DISCORD_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# Enable SMS notifications via Twilio (requires Twilio account)
ENABLE_SMS_NOTIFICATIONS=false
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
ADMIN_PHONE_NUMBER=+1234567890

# ============================================
# PERFORMANCE TUNING
# ============================================
# Number of concurrent pairs to monitor
MAX_CONCURRENT_PAIRS=50

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Database connection pool size
DB_POOL_SIZE=10

# ============================================
# DEVELOPMENT/TESTING
# ============================================
# Enable debug mode (more verbose logging)
DEBUG_MODE=false

# Enable test mode (don't send actual notifications)
TEST_MODE=false

# Dry run mode (analyze but don't save to database)
DRY_RUN=false
